<%= form_with model:@booking do |form|%>
    
    <br><br>
    
    <%= form.fields_for :passengers do |p_form| %>
        <div class="field">
            <%=p_form.label :Name%>
            <div class="control">
                <%=p_form.text_field :name%>
            </div>
        </div>

        <div class="field">
            <%=p_form.label :Email%>
            <div class="control">
                <%=p_form.text_field :email%>
            </div>
        </div>
    <%end%>

    <br>

    <%=form.hidden_field :flight_id, value: flight.id %>

    <div class="field is-grouped">
        <div class="control">
            <%=form.submit%>
        </div>
    </div>
<%end%>